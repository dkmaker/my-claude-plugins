{
  "description": "Validates baseline settings and required tools on session start with 2-hour throttling",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/baseline-check.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
