{
  "description": "Bridges Windows SSH agent to WSL for SSH/SCP/Git operations",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/ssh-agent-bridge.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
